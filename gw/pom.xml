            </plugin>
            <plugin>
                <artifactId>maven-javadoc-plugin</artifactId>
            </plugin>
            <plugin>
              	<groupId>maven-plugins</groupId>
              	<artifactId>maven-dotuml-plugin</artifactId>
              	<version>1.0</version>
              	<configuration>
    								<destdir>${maven.build.dir}</destdir>
  								</configuration>
            </plugin>
            
        </plugins>
